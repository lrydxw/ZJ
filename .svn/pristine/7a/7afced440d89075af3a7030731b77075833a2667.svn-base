@charset "utf-8";
.nvtt{
	white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis;
}
.bd-tit{
	font-size: 1.125rem;
	padding: 1rem 0;
	text-align: left;
	color: #252525;
}
.bd-time{
	color: #999999;
	font-size: 0.875rem;
	padding-bottom: 0.312rem;
}
.bd-con{
	color: #3F3F3F;
	font-size: 1.0rem;
	padding-bottom: 3.375rem;
}
.bd-con p{
	font-size: 0.875rem;
	line-height: 1.6;
}

.bd-con p:first-child{
	margin-bottom: 0.625rem;
}
.bd-con img{
	width: 100%;
	height: auto;
	padding: 0.312rem 0;
}

.icon {
	display: inline-block;
	background-repeat: no-repeat;
	-webkit-background-size: 100%;
	background-size: 100%;
}

.title-b {
	display: inline-block;
	text-align: left;
	font-size: 1rem;
	color: #3b98e0;
	vertical-align: top;
	margin-top: .4rem;
	line-height: 1rem;
}

.bodtom-box {
	z-index: 666;
	position: fixed;
	bottom: 0rem;
	width: 100%;
	padding: .375rem 0 .375rem .9375rem;
	background-color: #3b98e0;
}

.logobot-icon {
	margin-right: .625rem;
	width: 2.562rem;
	height: 2.562rem;
	background-image: url(../img/logo-bot.png);
}

.bot-title {
	display: inline-block;
	text-align: left;
	font-size: .9375rem;
	color: #FFFFFF;
	vertical-align: top;
	margin-top: .86rem;
	line-height: .9375rem;
}

.commonButton {
	float: right;
	height: 2rem;
	width: 6rem;
	margin-right: 2rem;
	border: .0625rem solid #FFFFFF;
	background-color: #FFFFFF;
	color: #3b98e0;
	font-size: .9375rem;
	line-height: .9375rem;
	border-radius: .125rem;
	margin-top: .4rem;
	outline: none;
}

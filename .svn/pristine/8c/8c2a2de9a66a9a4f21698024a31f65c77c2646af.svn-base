/*******基本信息*************/
.basicMessageDiv{border-bottom: 1px solid #DADADA;overflow:hidden;padding-left: 20px;background-color:#fff ;}
.basicMessageSpan1{height: 60px;line-height:60px;width:80%;float: left;text-align: left;}

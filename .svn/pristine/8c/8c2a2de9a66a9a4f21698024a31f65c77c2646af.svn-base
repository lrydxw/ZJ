.t_border{
	border-top:1px solid #DADADA ;
}
/**清除浮动*/

.clr:after{
	content: '';
	display: table;
	clear: both;
}
.me_code{
	display: inline-block;
	width: 18px;
	height: 18px;
	vertical-align: middle;
	background-image:url(../img/me_code.png);
	background-repeat: no-repeat;
	background-position: center;
	background-size: 100%;
	-webkit-background-size: 100%;
}


/*全局样式*/
body{
    background: #EFEFEF;
}
.commonDiv{
    margin:0;
}
.meMessageDiv{
    margin:0 10px;
    /*border-bottom: 1px solid #DADADA;*/
}
.not-border-bottom{
    border-bottom: none;
}
.updonwline {
    border-bottom: 1px solid #DADADA;
    border-top: 1px solid #DADADA;
    overflow: hidden;
    margin:10px 0;
}
.border-wline{
    box-sizing: border-box;
    line-height: 0;
    background-color: #DFDFDF;
    width: 100%;
    height: 1px;
}
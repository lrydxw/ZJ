.body-content{
	position: relative;
}
.active-rule{
	width: 73px;
	position: absolute;
	right: 0px;
	top:120px;
}
.active-rule img{
	width: 100%;
}

.apply-stage{
	position: absolute;
	top:35%;
	left:14%;
	width: 58%;
	z-index: 100;
}


.apply-stage img,.apply-detail img{
	width: 100%;
}

.apply-detail{
	position: absolute;
	top: 41.7%;
	left:0;
	width: 96%;
}

.apply-link,.join-link{
	position: absolute;
	top:20%;
	width: 100%;
	height: 80%;
}


.join-stage{
	position: absolute;
	top:62%;
	left:22%;
	width: 58%;
	z-index: 100;
}


.join-stage img,.join-detail img{
	width: 100%;
}

.join-detail{
	position: absolute;
	top: 68.7%;
	right:0;
	width: 96%;
}

.stageInv{
	position: absolute;
	width: 37%;
    height: 8%;
    left: 27%;
    top: 14%;
    color:#ee9453;
}
.stageInv span{
	font-weight: 700;

}


/*弹窗*/
#ruleBox{
	position: absolute;
	left: 0px;
	top:0px;
	width: 100%;
	z-index: 10000;
	overflow: hidden;
}
.rule-bg{
	width: 100%;
	height: 100%;
	background: rgba(0,0,0,0.6);
	position: absolute;
	left: 0px;
	top:0px;
	z-index: 1;
}
.rule-close{
	width: 28px;
	position: absolute;
	right: 13%;
	top:10%;
	margin-top:-14px;
	z-index: 3;
}
.rule-close img{
	width: 100%;
}

.rule-cont{
	position: relative;
	width: 74%;
	margin: auto;
	box-sizing: border-box;
	border:7px solid #f08a53;
	border-radius: 4px;
	background: #fcf4d5;
	z-index: 2;
	overflow: auto;
	padding-bottom: 15px
}

.rule-cont img{
	width: 100%;
}
